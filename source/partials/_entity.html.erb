<div class="col-xs-20 col-xs-offset-2 col-sm-6 col-sm-offset-2 col-md-6 col-md-offset-3">
	<div class="name">
		<h1 property="name"><%= entity.name %></h1>
		<div class="symbol small">
			&<%= entity.html_code %>
		</div>
	</div>

	<div class="codes">
		<h4 class="type" title="Unicode">UNICODE</h4><code class="selectable" property="sampleType"><%= entity.unicode %></code><br>
		<h4 class="type" title="Hexadecimal Code">HEX CODE</h4><code class="selectable" property="sampleType">&amp;<%= entity.hex_code %></code><br>
		<h4 class="type" title="HTML Code">HTML CODE</h4><code class="selectable" property="sampleType">&amp;<%= entity.html_code %></code><br>
		<% if entity.html_entity.blank? %>
			<h4 class="type" title="HTML Entity">HTML ENTITY</h4><code>&mdash;</code><br>
		<% else %>
			<h4 class="type" title="HTML Entity">HTML ENTITY</h4><code class="selectable" property="sampleType">&amp;<%= entity.html_entity %></code><br>
		<% end %>
		<h4 class="type" title="CSS Content Code">CSS CODE</h4><code class="selectable" property="sampleType">&#92;<%= entity.unicode.split("U+0").last %></code>
		<div class="example">
			<code>
				<span>// html example</span><br>
				&#60;span&#62;&amp;<%= entity.html_code %>&#60;&#47;span&#62;
			</code>
		</div><br>
		<div class="example">
			<code>
				<span>// css example</span><br>
				span {<br>
					&nbsp;&nbsp;content: "&#92;<%= entity.unicode.split("U+0").last %>";<br>
				}
			</code>
		</div>
	</div>
</div>

<div class="col-xs-24 col-sm-16 col-md-12 show-sm" style="margin-top:-7.5em;padding:3em;">
	<span id="symbol" class="symbol large">
		&<%= entity.html_code %>
	</span>
</div>