<%# Meta Tags %>
<% content_for :meta do %>
  <%= partial "meta/meta_index" %>
<% end %>

<%# Colors %>
<% content_for :stylesheets do %>
	article {background-color: rgb(45, 50, 55);}
<% end %>

<%# Page Content %>
<section class="row">

	<% data.all.entities.each do |entity| %>
		<div class="col-xs-8 col-sm-6 col-md-4 col-lg-3 col-xl-2" vocab="http://schema.org/" typeof="Code" style="margin-top:4em;">
			<div class="name small">
				<h4 property="name"><%= entity.name %></h4>
			</div>

			<div class="entity small">
				&<%= entity.html_code %>
			</div>

			<div class="codes small">
				<code><%= entity.unicode %></code>
				<code>&amp;<%= entity.hex_code %></code>
				<code>&amp;<%= entity.html_code %></code>
			</div>
		</div>
	<% end %>

</section>