---
typeof: ItemPage
changefreq: "monthly"
priority: 0.5
---

<%# Meta Tags %>
<% content_for :meta do %>
  <%= partial("meta/meta_entity", :locals => { :entity => entity }) %>
<% end %>

<%# Colors %>
<% content_for :stylesheets do %>
	article {background-color: rgb(75, 55, 65);}
<% end %>

<%# Page Content %>
<section class="row template letters" vocab="http://schema.org/" typeof="Code">
	<%= partial("partials/entity", :locals => { :entity => entity }) %>
</section>

<%# Page Footer %>
<% content_for :breadcrumbs do %>
  <span typeof="v:Breadcrumb">
  	<%= link_to "Home", "/", rel: "v:url", property: "v:title" %> &#8250;
    <span rel="v:child" typeof="v:Breadcrumb">
      <%= link_to "Letters", "/letters/", rel: "v:url", property: "v:title" %> &#8250;
      <span rel="v:child" typeof="v:Breadcrumb">
      	<%= link_to "#{entity.name}", "/letters/#{entity.slug}/", rel: "v:url", property: "v:title" %>
      </span>
    </span>
  </span>
<% end %>